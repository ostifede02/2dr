<?xml version="1.0"?>
<robot name="delta_robot">

    <!-- RAILS -->
    <link name="rails_link">

        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/rails.stl"/>
            </geometry>
            <material name="gray">
              <color rgba="0.8 0.8 0.8 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 9" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/carriage_1.stl" scale="0.9 1.5 0.9"/>
            </geometry>
        </collision>
    </link>
    <!-- RAILS END-->

    <!-- END EFFECTOR -->
    <link name="end_effector_link">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/end_effector.stl"/>
            </geometry>
            <material name="gray">
              <color rgba="0.8 0.8 0.8 1"/>
            </material>
        </visual>
    </link>

    <!-- <joint name="end_effector_joint" type="revolute">
        <origin xyz="0 0. -450" rpy="0 0 0"/>
        <parent link="rod_1_link"/>
        <child link="end_effector_link"/>
        <axis xyz="0 1 0"/>
        <limit lower="60" upper="350" velocity="0" effort="0"/> 
    </joint> -->
    <!-- END EFFECTOR END-->



    <!-- CARRIAGE 1 -->
    <link name="carriage_1_link">

        <visual>
            <origin xyz="0. 0. 0."/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/carriage_1.stl"/>
            </geometry>
            <material name="white">
              <color rgba="1. 1. 1. 1."/>
            </material>
        </visual>

    </link>

    <joint name="carriage_1_joint" type="prismatic">
        <origin xyz="0. 0. 0." rpy="0 0 0"/>
        <parent link="rails_link"/>
        <child link="carriage_1_link"/>
        <axis xyz="-1 0 1"/>
        <limit lower="60" upper="350" velocity="0" effort="0"/> 
    </joint>
    <!-- CARRIAGE 1 END-->

    <!-- ROD 1 -->
    <link name="rod_1_link">

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/link_1.stl"/>
            </geometry>
            <material name="red">
              <color rgba="1. 0.2 0.2 1."/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/link_1.stl"/>
            </geometry>
        </collision>

    </link>

    <joint name="rod_1_joint" type="revolute">
        <origin xyz="0. 0. 0." rpy="0 0 0"/>
        <parent link="carriage_1_link"/>
        <child link="rod_1_link"/>
        <axis xyz="0 -1 0"/>
        <limit lower="0" upper="6.28" velocity="0" effort="0"/> 
    </joint>

    <!-- <link name="rod_1_end-effector_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/end-effector_joint.stl"/>
            </geometry>
            <material name="dark_grey">
                <color rgba="0.9 0.9 0.9 1"/>
            </material>
        </visual>
    </link> -->

    <joint name="rod_1_end-effector_joint" type="revolute">
        <origin xyz="0 0 -450"/>
        <parent link="rod_1_link"/>
        <child link="end_effector_link"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="6.28" velocity="0" effort="0"/>
    </joint>
    <!-- ROD 1 END-->




    <!-- CARRIAGE 2 -->
    <link name="carriage_2_link">

        <visual>
            <origin xyz="0. 0. 0."/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/carriage_2.stl"/>
            </geometry>
            <material name="white">
              <color rgba="1. 1. 1. 1."/>
            </material>
        </visual>

    </link>

    <joint name="carriage_2_joint" type="prismatic">
        <origin xyz="0. 0. 0." rpy="0 0 0"/>
        <parent link="rails_link"/>
        <child link="carriage_2_link"/>
        <axis xyz="1 0 1"/>
        <limit lower="60" upper="350" velocity="0" effort="0"/> 
    </joint>
    <!-- CARRIAGE 2 END-->

    <!-- ROD 2 -->
    <link name="rod_2_link">

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/link_2.stl"/>
            </geometry>
            <material name="green">
              <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/link_2.stl"/>
            </geometry>
        </collision>

    </link>

    <joint name="rod_2_joint" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="carriage_2_link"/>
        <child link="rod_2_link"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="6.28" velocity="0" effort="0"/> 
    </joint>

    <link name="rod_2_end-effector_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/end-effector_joint.stl"/>
            </geometry>
            <material name="dark_grey">
                <color rgba="0.9 0.9 0.9 1"/>
            </material>
        </visual>
    
    </link>

    <joint name="rod_2_end-effector_joint" type="fixed">
        <origin xyz="0 0 -450"/>
        <parent link="rod_2_link"/>
        <child link="rod_2_end-effector_link"/>
    </joint>
    <!-- ROD 2 END-->


    <!-- ROD 3 -->
    <link name="rod_3_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/link_1_c2.stl"/>
            </geometry>
            <material name="green">
              <color rgba="0 1 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="rod_3_joint" type="revolute">
        <origin xyz="45 0 0" rpy="0 0 0"/>
        <parent link="carriage_2_link"/>
        <child link="rod_3_link"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="6.28" velocity="0" effort="0"/> 
    </joint>

    <link name="rod_3_end-effector_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://deltarobot_description/meshes/end-effector_joint.stl"/>
            </geometry>
            <material name="dark_grey">
                <color rgba="0.9 0.9 0.9 1"/>
            </material>
        </visual>
    
    </link>

    <joint name="rod_3_end-effector_joint" type="fixed">
        <origin xyz="0 0 -450"/>
        <parent link="rod_3_link"/>
        <child link="rod_3_end-effector_link"/>
    </joint>
    <!-- ROD 3 END-->

</robot>